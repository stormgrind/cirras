name: back-end
summary: back-end appliance with JBoss AS 6
hardware:
  memory: 512
appliances:
  - cirras
packages:
  includes:
    - jboss-as6
    - jboss-as6-cloud-profiles
    - torquebox
    - java-1.6.0-openjdk
post:
  base:
    - "/sbin/chkconfig --add jboss-as6"
    - "/sbin/chkconfig --level 2345 jboss-as6 off"

